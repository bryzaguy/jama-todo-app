{
  "rules": {
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },  
  "globals": {
    "console": false,
    "describe": false,
    "localStorage": false,
    "it": false,
    "expect": false,
    "beforeEach": false,
    "afterEach": false,
    "document": false,
    "jasmine": false
  },
  "no-console": false,
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "react"
  ]
}